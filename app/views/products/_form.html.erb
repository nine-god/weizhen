<div class="container">
  <%= form_with(model: product, local: true) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="field">
        <%= form.label '产品名称' %>
        <%= form.text_field :name, id: :product_name %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= form.label '产品介绍' %>
        <%= form.text_area :profile,  { id: :product_profile , hidden: true}%>
      </div>
    </div>
    <div class="row">
      <div class='col-sm-12'>
        <!-- 加载编辑器的容器 -->
        <script id="ueditor_container" name="content" type="text/plain"> <%= raw product.profile %></script>
    </div>
    <div class="row">
      <div class="actions text-center">
        <%= form.submit  "保存" ,{onclick: "sync_product_profile()",class: "btn btn-default"}%> <%= link_to '取消', product.id.nil? ? products_path : product , {class: "btn btn-default"} %>
      </div>
    </div>
  <% end %>
</div><!--/.container-->
