

    <div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-12">
         
          <div class="row">
            <% @products.each do |product|%>
            <div class="col-xs-6 col-lg-4" >
              <h2><%= product.name %></h2>
              <p><%= generate_abstract_tag(product.profile) %></p>
              <p><%= link_to "查看详情 »" , product_path(product),{class: "btn btn-default" , role: "button"} %>
              <% if @manage %>
              <%= link_to '删除', product_path(product),{method: :delete, class: "btn btn-default" , role: "button",data: { confirm: '删除后不可恢复，确认需要删除吗？' } }%>
              <% end %>
              </p>

            </div><!--/.col-xs-6.col-lg-4-->
            <% end %>
          </div><!--/row-->
        </div><!--/.col-xs-12.col-sm-9-->
      </div><!--/row-->
    </div><!--/.container-->


