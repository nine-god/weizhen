<div class="container">
  <%= form_with(model: home, local: true) do |form| %>
    <% if home.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(home.errors.count, "error") %> prohibited this home from being saved:</h2>

        <ul>
        <% home.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="field">
        <% form.label '公司名称' %>
        <% form.text_field :name, id: :home_name %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= form.label '公司简介' %>
        <%= form.text_area :profile,  { id: :home_profile , hidden: true}%>
      </div>
    </div>
    <div class="row">
      <div class='col-sm-12'>
        <!-- 加载编辑器的容器 -->
        <script id="ueditor_container" name="content" type="text/plain"> <%= raw home.profile %></script>
    </div>
    <div class="row">
      <div class="actions text-center">
        <%= form.submit  "保存" ,{onclick: "sync_home_profile()",class: "btn btn-default"}%> <%= link_to '取消', home.id.nil? ? home_path : home , {class: "btn btn-default"} %>
      </div>
    </div>
  <% end %>
</div><!--/.container-->
