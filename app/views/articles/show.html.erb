<%= render 'layout' %>
<div class="container">
  <div class="row">
	<h2 class="text-center" >
	  <strong><%= @article.title %></strong>
	  
	</h2>
  </div><!--/row-->
  <div class="row">
	<p class="text-left">
	  <%= raw @article.text %>
	</p>
  </div><!--/row-->
  <div class="row" >
    <div class="text-center">
		<% if user_signed_in? %>
		<%= link_to '编辑', edit_article_path(@article) ,{class: "btn btn-default"}%> 
		<% end %>
		<%= link_to '返回', articles_path() ,{class: "btn btn-default"}%>
	</div>
  </div><!--/row-->
</div><!--/.container-->



