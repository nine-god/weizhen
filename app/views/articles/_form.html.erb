


<div class="container">
  <%= form_with(model: article, local: true) do |form| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="field">
        <%= form.label '标题' %>
        <%= form.text_field :title, id: :article_title %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= form.label '内容' %>
        <%= form.text_area :text,  { id: :article_text , hidden: true}%>
      </div>
    </div>
    <div class="row">
      <div class='col-sm-12'>
        <!-- 加载编辑器的容器 -->
        <script id="ueditor_container" name="content" type="text/plain"> <%= raw article.text %></script>
    </div>
    <div class="row">
      <div class="actions text-center">
        <%= form.submit  "保存" ,{onclick: "sync_article_text()",class: "btn btn-default"}%> <%= link_to '取消', article.id.nil? ? articles_path : article , {class: "btn btn-default"} %>
      </div>
    </div>
  <% end %>
</div><!--/.container-->
