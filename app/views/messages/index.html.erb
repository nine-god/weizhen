<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default">
        <table class="table table-striped table-bordered ">
          <thead>
              <tr class="info">
                <th style="min-width: 12%" >时间</th>
                <th style="min-width: 10%" >标题</th>
                <th style="min-width: 10%" >姓名</th>
                <th style="min-width: 10%" >联系电话</th>
                <th style="min-width: 10%" >电子邮箱</th>
                <th style="min-width: 10%" >公司名称</th>
                <th style="min-width: 10%" >地址</th>
                <th style="min-width: 21%" >留言</th>
                <th style="min-width: 7%" >操作</th>
              </tr>
           </thead>
           <% @messages.each_with_index do |message,index| %>
            <%tr_class= (index%2==0)? "class=success": ""%>
            <tr <%= tr_class%>>
              <td><%= message.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
              <td><%= message.title %></td>
              <td><%= message.username %></td>
              <td><%= message.tel %></td>
              <td><%= message.email %></td>
              <td><%= message.company %></td>
              <td><%= message.address %></td>
              <td><%= message.text %></td>
              <td><%= link_to '查看', message %> | <%= link_to '删除', message ,method: :delete, data: { confirm: '删除后不可恢复，确认需要删除吗？' } %></td>
            </tr>
          <% end %>
        </table>
        <div class="text-center">
          <ul class="pagination">
            <%= generate_pagination(total: @total,offset: @offset , limit: @limit)%>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>
